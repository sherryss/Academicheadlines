<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5pt">
    <TextView
        android:id="@+id/answer_paper_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" NO ANSWER !!!　"
        android:textColor="#000000"
        android:textSize="22sp"
        android:layout_marginBottom="5pt"
        android:layout_below="@+id/id_delete"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/answer_answer_user_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="5pt"
            android:layout_marginBottom="5pt"
            android:src="@drawable/avatar"/>
        <TextView
            android:id="@+id/answer_answer_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/answer_answer_user_avatar"
            android:text=" NO ANSWER !!!"
            android:textColor="#000000"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/answer_answer_user_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优秀回答者 Car desiger"
            android:textColor="#000000"
            android:layout_below="@+id/answer_answer_user_name"
            android:layout_toRightOf="@+id/answer_answer_user_avatar"
            android:layout_toEndOf="@+id/answer_answer_user_avatar" />
        <Button
            android:id="@+id/answer_answer_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="+关注"
            android:textSize="20sp"
            android:textColor="#FFFFFF" />
    </RelativeLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/answer_answer_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" NO ANSWER !!!"
            android:textSize="8pt"
            android:textColor="#000000"
            android:layout_marginRight="5pt"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </ScrollView>
</LinearLayout>
